<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_tittle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="未检测到车辆数据！"
        android:textColor="#ff000000"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reason_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="可能存在以下原因：\n1、车辆未打火，请您打火！打火检测到数据后页面会自动跳转！\n\n2、您更换了车辆。\n一个盒子只能支持一辆车！"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/reason_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="请您再次确认车辆已打火！\n\n请您务必确认已打火后再点击确认按钮!"
            android:textColor="#ff000000"
            android:textSize="20sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/countdown_btn_bg"
        android:gravity="center"
        android:text="确认，我已打火!"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</LinearLayout>
