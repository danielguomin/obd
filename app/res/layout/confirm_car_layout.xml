<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/tittle_layout" />

    <TextView
        android:id="@+id/car_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:text="当前选择车型："
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:layout_marginTop="@dimen/common_margin_lr"
        android:lineSpacingExtra="4dp"
        android:text="车型选择之后不可以修改! \n\n请您务必正确选择！\n否则会导致胎压盒子无法使用！"
        android:textColor="#FF009488"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:layout_marginRight="@dimen/common_margin_lr"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goback"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/go_back_bg"
            android:gravity="center"
            android:text="重新选择"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/buttom_bg"
            android:gravity="center"
            android:text="确认无误"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>