<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dailog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:text="保存胎压"
        android:textColor="#ff42484B"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff5F6876" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="22dp"
        android:text="请打开设备网络，系统将自动进行 正版检测。\n 在通过检测之前，您的盒子将不能 正常使用。"
        android:textColor="#ff3D424C"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="15dp"
        android:text="说明:首次使用3个月第一次检测，以后每年 保检测一次"
        android:textColor="#ffE24B01"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/save"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/disclaimer_agree_btn_bg"
        android:gravity="center"
        android:text="已打开网络，重试"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp" />

</LinearLayout>
