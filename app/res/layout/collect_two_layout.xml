<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/tittle_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:layout_marginRight="@dimen/common_margin_lr"
        android:layout_marginTop="10dp"
        android:text="请不要关闭手机，不要关闭APP，正在深度校准中。"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/run" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="130dp"
            android:gravity="right"
            android:text="掉头前\n提速至20km/h"
            android:textColor="#FF35BDB2"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="230dp"
            android:text="提速至60km/h并保持\n该速度行驶若干分钟"
            android:textColor="#FF35BDB2"
            android:textSize="10sp" />

    </FrameLayout>

</LinearLayout>
