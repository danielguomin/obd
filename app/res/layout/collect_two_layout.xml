<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/tittle_layout" />

    <View
        android:layout_width="156dp"
        android:layout_height="270dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/run" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:layout_marginRight="@dimen/common_margin_lr"
        android:layout_marginTop="30dp"
        android:text="请您提前选择好路况，再点击准备好了按钮!"
        android:textColor="#FF009488"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/common_margin_lr"
        android:layout_marginRight="@dimen/common_margin_lr"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="开始深度校准"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</LinearLayout>
