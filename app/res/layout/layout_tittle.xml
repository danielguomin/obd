<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tittle_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/tittle_bg"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/title_back"
        android:layout_width="@dimen/title_back_height"
        android:layout_height="@dimen/title_back_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_20"
        android:background="@drawable/btn_back_circle"
        android:src="@drawable/back_img" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize36" />

</FrameLayout>
