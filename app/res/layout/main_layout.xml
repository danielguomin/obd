<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_tittle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/car_image"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/car" />

        <TextView
            android:id="@+id/car_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="迈腾2015款豪华版"
            android:textColor="#555555"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:id="@+id/phone_image"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/phone" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="手机号:18600474092"
            android:textColor="#555555"
            android:textSize="14sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/car_layout"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_gravity="center">

            <View
                android:id="@+id/left_top"
                android:layout_width="25dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/t_nromal" />

            <View
                android:id="@+id/left_buttom"
                android:layout_width="25dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/t_nromal" />

            <View
                android:id="@+id/right_top"
                android:layout_width="25dp"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/t_nromal" />

            <View
                android:id="@+id/right_buttom"
                android:layout_width="25dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/t_nromal" />

        </RelativeLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="340dp"
            android:layout_gravity="center"
            android:background="@drawable/car_layout" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/warm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <View
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:background="@drawable/warm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="模拟报警"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/misinformation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="修正灵敏度"
                android:textColor="#FF555555"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- <LinearLayout
             android:id="@+id/sensitive"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@drawable/menu_bg"
             android:gravity="center_horizontal"
             android:orientation="vertical"
             android:paddingBottom="10dp"
             android:paddingTop="10dp">

             <View
                 android:layout_width="35dp"
                 android:layout_height="32dp"
                 android:background="@drawable/setting" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="灵敏度"
                 android:textColor="#555555"
                 android:textSize="16sp" />
         </LinearLayout>-->

        <LinearLayout
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <View
                android:layout_width="35dp"
                android:layout_height="29dp"
                android:background="@drawable/reset" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="重新校准"
                android:textColor="#FF555555"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
