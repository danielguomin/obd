<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/padding_108"
        android:layout_height="@dimen/padding_108"
        android:layout_marginLeft="@dimen/padding_6"
        android:layout_marginTop="@dimen/padding_6"
        android:alpha="0.6"
        android:background="@drawable/btn_back"
        android:src="@drawable/back_img" />


    <LinearLayout
        android:id="@+id/speed_view"
        android:layout_width="@dimen/padding_138"
        android:layout_height="@dimen/padding_138"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/padding_6"
        android:layout_marginLeft="@dimen/padding_6"
        android:alpha="0.6"
        android:background="@drawable/speed_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speed"
            style="@style/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_speed"
            android:textSize="@dimen/textSize48"
            android:textStyle="bold" />

        <TextView
            style="@style/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km/h"
            android:textColor="@color/color_speed"
            android:textSize="@dimen/textSize18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/count"
            style="@style/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:elevation="4dp"
            android:textColor="@color/color_red" />

        <View
            android:id="@+id/img_gps"
            android:layout_width="@dimen/gps_width"
            android:layout_height="@dimen/gps_width"
            android:background="@drawable/gps_disconnect" />

        <TextView
            android:id="@+id/time"
            style="@style/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:elevation="4dp"
            android:textColor="@color/color_white" />
    </LinearLayout>


    <ImageView
        android:id="@+id/btn_setting"
        android:layout_width="@dimen/padding_108"
        android:layout_height="@dimen/padding_108"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/padding_6"
        android:layout_marginRight="@dimen/padding_6"
        android:alpha="0.6"
        android:background="@drawable/btn_back"
        android:src="@drawable/setting_img" />

    <TextView
        android:id="@+id/fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@android:color/holo_red_dark"
        android:textSize="@dimen/textSize24" />

    <TextView
        android:id="@+id/limit_show_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size_14"
        android:textColor="@color/color_red"
        android:textSize="@dimen/textSize24" />
</FrameLayout>
